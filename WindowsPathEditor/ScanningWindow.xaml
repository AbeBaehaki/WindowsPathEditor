<Window x:Class="WindowsPathEditor.ScanningWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Scanning the disk" Height="149" Width="514"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        >
    <Grid>
        <ProgressBar Height="23" HorizontalAlignment="Left" Margin="12,57,0,0" Name="progressBar1" VerticalAlignment="Top" Width="374" IsIndeterminate="True" />
        <Label Content="Searching. Please wait..." Height="39" HorizontalAlignment="Left" Margin="12,12,0,0" Name="label1" VerticalAlignment="Top" FontSize="18" />
        <Button Content="Cancel" Height="23" HorizontalAlignment="Left" Margin="405,57,0,0" Name="button1" VerticalAlignment="Top" Width="75" Click="Cancel_Click"/>
        <Label Content="" Height="28" HorizontalAlignment="Left" Margin="12,82,0,0" Name="currentDirectory" VerticalAlignment="Top"/>
    </Grid>
</Window>
